            <p>瑜伽预约</p>
        </div>
        <div class="weui-cell__ft"></div>
    </a>
    <a class="weui-cell weui-cell_access" data-href="/home/myscorder">
        <i class="fa fa-calendar-check-o" aria-hidden="true"></i>
        <div class="weui-cell__bd">
            <p>美肤预约</p>
        </div>
        <div class="weui-cell__ft"></div>
    </a>
    <a class="weui-cell weui-cell_access" data-href="/home/myptorder">
        <i class="fa fa-calendar-check-o" aria-hidden="true"></i>
        <div class="weui-cell__bd">
            <p>私教预约</p>
        </div>
        <div class="weui-cell__ft"></div>
    </a>
</div>

